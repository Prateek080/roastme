{
  "name": "Photo Roasting App",
  "short_name": "PhotoRoast",
  "description": "AI-powered photo roasting for entertainment and humor",
  "version": "1.0.0",
  "manifest_version": 3,
  "theme_color": "#6366f1",
  "background_color": "#ffffff",
  "display": "standalone",
  "orientation": "portrait-primary",
  "scope": "/",
  "start_url": "/",
  "id": "/",
  
  "icons": [
    {
      "src": "/favicon-16x16.png",
      "sizes": "16x16",
      "type": "image/png"
    },
    {
      "src": "/favicon-32x32.png",
      "sizes": "32x32",
      "type": "image/png"
    },
    {
      "src": "/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png"
    }
  ],
  
  "categories": ["entertainment", "photo", "social", "utilities"],
  "lang": "en-US",
  "dir": "ltr",
  
  "screenshots": [
    {
      "src": "/screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Photo upload and roasting interface on desktop"
    },
    {
      "src": "/screenshot-narrow.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow", 
      "label": "Photo roasting app on mobile device"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Upload Photo",
      "short_name": "Upload",
      "description": "Quickly upload a photo to get roasted",
      "url": "/?action=upload",
      "icons": [
        {
          "src": "/shortcut-upload.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Random Roast",
      "short_name": "Random",
      "description": "Get a random photo roasted",
      "url": "/?action=random",
      "icons": [
        {
          "src": "/shortcut-random.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    }
  ],
  
  "prefer_related_applications": false,
  "related_applications": [],
  
  "permissions": [
    "storage"
  ],
  
  "features": [
    "cross-origin-isolated"
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  }
}
